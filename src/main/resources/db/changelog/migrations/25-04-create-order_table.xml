<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="author" global="false" value="nmakarov"/>
    <property name="table.name" global="false" value="order"/>
    <changeSet id="create-${table.name}_table" author="${author}">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="${table.name}"/>
            </not>
        </preConditions>
        <createTable tableName="${table.name}">
            <column name="order_id" type="numeric(19,0)" remarks="PK"/>
            <column name="user_id" type="numeric(19,0)" remarks="FK(user_id)"/>
            <column name="creation_date" type="datetime" remarks="Дата и Время создания заказа"/>
            <column name="payment_method" type="varchar(30)" remarks="Способ оплаты заказа"/>
            <column name="delivery_data" type="date" remarks="Дата доставки"/>
            <column name="status" type="varchar(20)" remarks="Статус заказа"/>
            <column name="total_cost" type="double" remarks="Суммарная стоимость заказа"/>
        </createTable>
        <createSequence sequenceName="${table.name}_order_id_seq" incrementBy="1" startValue="1"/>
        <addPrimaryKey tableName="${table.name}" columnNames="order_id" constraintName="pk_${table.name}"/>
    </changeSet>

    <changeSet id="create-${table.name}_index" author="${author}">
        <preConditions>
            <not>
                <indexExists indexName="${table.name}_order_id_idx"/>
                <indexExists indexName="${table.name}_user_id_idx"/>
            </not>
        </preConditions>
        <createIndex tableName="${table.name}" indexName="${table.name}_order_id_idx">
            <column name="order_id"/>
        </createIndex>
        <createIndex tableName="${table.name}" indexName="${table.name}_user_id_idx">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>